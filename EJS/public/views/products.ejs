<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <h1 class="text-center my-5">LISTA DE PRODUCTOS</h1>
    <div class="container d-flex flex-column justify-content-center my-5">
        <% if (empty) { %>
        <div class="p-5">
            <h2 class="text-center">
                No hay productos
            </h2>
        </div>
        <% } else { %>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <th scope="col"><%= product.id %></th>
                        <th scope="col"><%= product.title %></th>
                        <th scope="col"><%= product.price %></th>
                        <th scope="col"><img src=<%= product.thumbnail %>></th>
    
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>
        <a href="/" class="my-5 align-self-center">
            <button class="btn btn-secondary" type="button">Volver al formulario</button>
        </a>
    </div>
</body>

</html>