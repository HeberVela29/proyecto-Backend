<h1 class="text-center my-5">LISTA DE PRODUCTOS</h1>
<div class="container d-flex flex-column justify-content-center my-5">
    {{#if empty}}
        <div class="p-5">
            <h2 class="text-center">
                No hay productos
            </h2>
        </div>
    {{else}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr >
                        <th scope="col">{{this.id}}</th>
                        <th scope="col">{{this.title}}</th>
                        <th scope="col">$ {{this.price}}</th>
                        <th scope="col"><img src={{this.thumbnail}}></th>

                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
    <a href="/" class="my-5 align-self-center">
        <button class="btn btn-secondary" type="button">Volver al formulario</button>
    </a>
</div>