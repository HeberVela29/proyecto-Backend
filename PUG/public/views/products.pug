doctype
html(lang='es')
  head
    meta(charset='utf-8')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    title="Desaf√≠o 5" 
h1(class="text-center my-5")="LISTA DE PRODUCTOS"
div(class="container d-flex flex-column justify-content-center my-5")
    if empty 
        div(class="p-5")
            h2(class="text-center")="No hay productos"
        a(href="/" class="my-5 aling-self-center text-center")
            button(class="btn btn-secondary" type="button")="Volver al formulario" 
    else
        table(class="table")
            thead 
                tr 
                    th(scope="col")="ID"
                    th(scope="col")="Producto"
                    th(scope="col")="Precio"
                    th(scope="col")="Imagen"
            tbody 
                each product in products 
                    tr 
                        th(scope="col")= product.id
                        th(scope="col")= product.title 
                        th(scope="col")= product.price 
                        th(scope="col") 
                            img(src=product.thumbnail)
        
        a(href="/" class="my-5 aling-self-center text-center")
            button(class="btn btn-secondary" type="button")="Volver al formulario" 